macro attach S "<shell-escape>sh $HOME/.config/mutt/saveAttachement<enter>"
macro attach N "<shell-escape>sh $HOME/.config/mutt/saveAttachement name<enter>"
# set query_command=”mu cfind –format=mutt-ab  ‘%s'”
macro index ,r "T ~O | ~N\n;N"
set editor="nvim"
