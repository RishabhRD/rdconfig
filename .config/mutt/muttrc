macro index a     "|abook --config $XDG_CONFIG_HOME/abook/abookrc --datafile $XDG_CACHE_HOME/abook/addressbook --add-email\n" 'add sender to abook'
macro pager a     "|abook --config $XDG_CONFIG_HOME/abook/abookrc --datafile $XDG_CACHE_HOME/abook/addressbook --add-email\n" 'add sender to abook'
bind editor        <Tab> complete-query
macro index ,, "T ~O | ~N\n;N"
